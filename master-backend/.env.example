# ──────────────────────────────────────────────────
# AmbiSevatra Backend Configuration
# Copy this to .env and fill in your values
# ──────────────────────────────────────────────────

# Firebase
FIREBASE_CREDENTIALS_PATH=firebase-credentials.json
FIREBASE_API_KEY=your-firebase-web-api-key

# Dropbox
DROPBOX_APP_KEY=your-dropbox-app-key
DROPBOX_APP_SECRET=your-dropbox-app-secret
DROPBOX_REFRESH_TOKEN=your-dropbox-refresh-token

# Twilio (set TWILIO_ENABLED=false to disable SMS and log OTP to console instead)
TWILIO_ENABLED=false
TWILIO_ACCOUNT_SID=your-twilio-sid
TWILIO_AUTH_TOKEN=your-twilio-auth-token
TWILIO_PHONE_NUMBER=+1234567890

# App
APP_NAME=AmbiSevatra
APP_ENV=development
CORS_ORIGINS=http://localhost:5173,http://localhost:3000
SECRET_KEY=change-this-to-a-random-secret-key

# OTP
OTP_EXPIRY_SECONDS=300
OTP_LENGTH=6

# Redis (Upstash — use your Upstash Redis REST URL)
REDIS_URL=rediss://default:YOUR_UPSTASH_PASSWORD@YOUR_UPSTASH_ENDPOINT:6379

# Cleanup (cron job deletes unverified users after TTL)
CRON_SECRET=change-me-to-something-random
UNVERIFIED_USER_TTL_HOURS=1

# SMTP (optional — for sending email verification OTP; if not set, OTP is logged to console)
SMTP_HOST=
SMTP_PORT=587
SMTP_EMAIL=
SMTP_PASSWORD=
